    android:gravity="center"
    android:layout_gravity="center"/>

    <ListView
        android:id="@+id/listView"
        android:background="@drawable/list_cell"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>


</LinearLayout>
